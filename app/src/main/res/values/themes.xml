<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SplashTheme" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>