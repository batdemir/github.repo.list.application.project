    <style name="item_repo_header_text_style" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_repo_detail_text_style" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textColor">@color/darkGray</item>
