        <item name="android:textAlignment">center</item>
    </style>

    <style name="TableFourItemStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">@dimen/item_four_width</item>
        <item name="android:maxWidth">@dimen/item_four_width</item>
    </style>

    <style name="TableFiveItemStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">@dimen/item_five_width</item>
        <item name="android:maxWidth">@dimen/item_five_width</item>
