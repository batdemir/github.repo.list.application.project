<resources>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TableTwoItemStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">@dimen/item_two_width</item>
        <item name="android:maxWidth">@dimen/item_two_width</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TableThreeItemStyle">
        <item name="android:layout_weight">1</item>
